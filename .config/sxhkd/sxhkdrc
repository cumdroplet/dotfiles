# terminal
super + shift + Return
	alacritty

# run program prompt
super + Return
	dmenu_run

# run password prompt
super + p
	dmenu_keepass

# exit or restart BSPWM
super + q
	close

# close window
super + shift + x
	bspc node -c

# toggle window state
super + @space
	toggle-window-state

# send window to workspace
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# swap window focus
super + {h,j,k,l}
	bspc node -f {west,south,north,east}

# swap window with another
super + m : {h,j,k,l}
	bspc node -s {west,south,north,east}

# Move current window to a pre-selected space
super + shift + m
    bspc node -n last.!automatic

# preselect window spawn
super + shift + {h,j,k,l,@space}
	bspc node -p {west,south,north,east,cancel}

# program agnostic tabs
super + t : {h,j,k,l}
	tabc {west,south,north,east}

# expand window size
super + r : {h,j,k,l}
    STEP=20; SELECTION={1,2,3,4}; \
    bspc node -z $(echo "left -$STEP 0,bottom 0 $STEP,top 0 -$STEP,right $STEP 0" | cut -d',' -f$SELECTION) || \
    bspc node -z $(echo "right -$STEP 0,top 0 $STEP,bottom 0 -$STEP,left $STEP 0" | cut -d',' -f$SELECTION)

# adjust brightness
XF86Mon{BrightnessUp,BrightnessDown}
	brightnessctl set {+200,200-}

# adjust volume
XF86Audio{LowerVolume,RaiseVolume,Mute}
	amixer set Master {1%-,1%+,toggle}

# take a screenshot
Print
	screenshot

# media control
XF86Audio{Play,Stop,Prev,Next}
	mpc {toggle,clear,prev,next}

# browser
super + n
	qutebrowser
